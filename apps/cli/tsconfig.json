{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "sourceMap": true
  },
  "include": [
    "src/index.ts",
    "src/db.ts",
    "src/commands.ts",
    "src/commands/init.ts",
    "src/commands/doctor.ts",
    "src/commands/rankerIngest.ts",
    "src/commands/rankerScore.ts"
  ],
  "exclude": ["node_modules", "**/*.test.ts"]
}